html
    head
        style(type='text/css').
            #container1 {
                max-width: 900px;
                height: 900px;
                margin: auto;
            }
            #container2 {
                max-width: 900px;
                height: 900px;
                margin: auto;
            }
            h1 {
                font-size: 32px;
                text-align:center;
            }
        script(type='text/javascript', src='https://www.gstatic.com/charts/loader.js')
        script(type='text/javascript').
            google.charts.load('current', {'packages': ['corechart','bar']});
            google.charts.setOnLoadCallback(drawChart1);
            google.charts.setOnLoadCallback(drawChart2);
            google.charts.setOnLoadCallback(drawChart3);
            google.charts.setOnLoadCallback(drawChart4);

            function drawChart1() {
                var data = google.visualization.arrayToDataTable([
                    ['données', 'quantité'],
                    ['tweets', 1000],
                    ['likes', 1170],
                    ['Retweets', 660],
                    ['bots', 1030]
                ]);

                var options = {
                    chart: {
                        title: 'Statistiques générales',
                        titleTextStyle:{color: 'grey', fontName: 'Arial', fontSize: 18}
                    },
                    legend:{ position: 'none'},
                    bars: 'vertical' // Required for Material Bar Charts.
                };

                var chart = new google.charts.Bar(document.getElementById('chart1'));

                chart.draw(data, google.charts.Bar.convertOptions(options));

            }

            function drawChart2() {
                var data = google.visualization.arrayToDataTable([
                    ['Type', 'Nombre'],
                    ['Leaders', 50],
                    ['Suiveurs', 200]
                ]);

                var options = {
                    title: 'Proportion de bots',
                    titleTextStyle:{color: 'grey', fontName: 'Arial', fontSize: 18}
                };

                var chart = new google.visualization.PieChart(document.getElementById('chart2'));

                chart.draw(data, options);

            }

            function drawChart3() {
                var data = google.visualization.arrayToDataTable([
                    ['Données', 'Leader','Suiveur'],
                    ['fréqence de tweets par min',60,5],
                    ['nombre moyen de likes par tweet',70,3],
                    ['nombre moyen de Retweets par tweet',25,2],
                    ['nombre moyen de hashtags par tweet',4,3]
                ]);

                var options = {
                    chart: {
                        title: 'Statistiques par type de bot',
                        titleTextStyle:{color: 'grey', fontName: 'Arial', fontSize: 18}
                    },
                    bars: 'vertical' // Required for Material Bar Charts.
                };

                var chart = new google.charts.Bar(document.getElementById('chart3'));

                chart.draw(data, google.charts.Bar.convertOptions(options));

            }

            function drawChart4() {
                var data = google.visualization.arrayToDataTable([
                    ['Type', 'Nombre'],
                    ['Normaux', 50],
                    ['Liens', 200],
                    ['photo',30],
                    ['retweet',500]
                ]);

                var options = {
                    title: 'Proportion des types de tweets',
                    titleTextStyle:{color: 'grey', fontName: 'Arial', fontSize: 18}
                };
                var chart = new google.visualization.PieChart(document.getElementById('chart4'));

                chart.draw(data, options);

            }
